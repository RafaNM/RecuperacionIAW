<h1>Add restaurants</h1>

<div class="row">
    <form action="/add" method="POST" class="col s12" >
      <div class="row">
        
        <div class="input-field col s6">
          <input id="name" type="text" name="name">
          <label for="name">Name</label>
        </div>

        <div class="input-field col s6">
          <input id="web" type="text" name="web" >
          <label for="web">Website</label>
        </div>

        <div class="input-field col s6">
          <input id="phone" type="number" name="phone" >
          <label for="phone">Phone</label>
        </div>

        <div class="input-field col s6">
          <input id="email" type="email" name="email" >
          <label for="email">Email</label>
        </div>

        <div class="input-field col s12">
          <input id="location" type="text" name="location" >
          <label for="location">Location: (street, portal, postal code location, province)</label>
        </div>
        
        <div class="input-field col s6">
          <input id="price" type="number" name="price" >
          <label for="price">Price valoration</label>
        </div>

        <div class="input-field col s6">
          <input id="img" type="text" name="img" >
          <label for="img">Restaurant image (URL)</label>
        </div>

        <div class="input-field col s12">
          <input id="timetable" type="text" name="timetable" >
          <label for="timetable">Timetable</label>
        </div>
        
        <div class="row">
            <input type="submit" value="Save" class="btn black">
            <a href="/backend" class="btn blue">Cancel</a>
        </div>
    </form>
</div>